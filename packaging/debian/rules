#!/usr/bin/make -f

%:
	dh $@ --with python3

override_dh_auto_clean:
	rm -rf build dist *.egg-info .eggs

override_dh_auto_configure:
	@echo "Skipping configure step"

override_dh_auto_build:
	python3 -m build --wheel --no-isolation

override_dh_auto_test:
	@echo "Skipping test step"

override_dh_auto_install:
	python3 -m installer --destdir=debian/command-line-assistant --prefix=/usr dist/*.whl
	rm -rf debian/command-line-assistant/usr/local

override_dh_usrlocal:
	@echo "Skipping usrlocal check"

override_dh_python3:
	dh_python3

